@{
    Layout = "Layouts/_Application";
}

@section Styles { @RenderSection("Styles", required: false) }
@section Scripts { @RenderSection("Scripts", required: false) }

<!-- Layout wrapper -->
<div class="layout-wrapper layout-1 layout-without-sidenav">
    <div class="layout-inner">
        <!-- Layout navbar -->
        @await Html.PartialAsync("Layouts/Partials/_LayoutNavbar", new ViewDataDictionary(this.ViewData) { { "LayoutNavbarHideToggle", "True" } })

        <!-- Layout container -->
        <div class="layout-container">
            <!-- Layout content -->
            <div class="layout-content">
                <!-- Layout sidenav -->
                @await Html.PartialAsync("Layouts/Partials/_LayoutSidenav", new ViewDataDictionary(this.ViewData) { { "LayoutSidenavHorizontal", "True" } })

                <!-- Content -->
                <div class="container-fluid flex-grow-1 container-p-y">
                    @RenderBody()
                </div>
                <!-- / Content -->
                <!-- Layout footer -->
                @await Html.PartialAsync("Layouts/Partials/_LayoutFooter")
            </div>
            <!-- Layout content -->
        </div>
        <!-- / Layout container -->
    </div>
</div>
<!-- / Layout wrapper -->
