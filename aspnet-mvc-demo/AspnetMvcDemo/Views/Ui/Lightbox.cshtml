<h4 class="font-weight-bold py-3 mb-4">
    <span class="text-muted font-weight-light">UI elements /</span> Lightbox
</h4>

<hr class="border-light container-m--x mt-0">

<h5 class="font-weight-bold pt-1 pb-1 mt-4 mb-4">Photoswipe</h5>

<div id="photoswipe-example" class="row" itemscope itemtype="http://schema.org/ImageGallery">
    <figure itemprop="associatedMedia" itemscope itemtype="http://schema.org/ImageObject" class="col-sm-3">
        <a href="/Images/bg/1.jpg" itemprop="contentUrl" data-size="1920x1280">
            <img src="/Images/bg/1.jpg" itemprop="thumbnail" alt="Image description">
        </a>
    </figure>
    <figure itemprop="associatedMedia" itemscope itemtype="http://schema.org/ImageObject" class="col-sm-3">
        <a href="/Images/bg/2.jpg" itemprop="contentUrl" data-size="1920x1280">
            <img src="/Images/bg/2.jpg" itemprop="thumbnail" alt="Image description">
        </a>
    </figure>
    <figure itemprop="associatedMedia" itemscope itemtype="http://schema.org/ImageObject" class="col-sm-3">
        <a href="/Images/bg/3.jpg" itemprop="contentUrl" data-size="1920x1280">
            <img src="/Images/bg/3.jpg" itemprop="thumbnail" alt="Image description">
        </a>
    </figure>
    <figure itemprop="associatedMedia" itemscope itemtype="http://schema.org/ImageObject" class="col-sm-3">
        <a href="/Images/bg/4.jpg" itemprop="contentUrl" data-size="1920x1280">
            <img src="/Images/bg/4.jpg" itemprop="thumbnail" alt="Image description">
        </a>
    </figure>
</div>

<hr class="border-light container-m--x mt-5">

<h5 class="font-weight-bold pt-1 pb-1 mt-4 mb-4">Blueimp Gallery</h5>

<!-- Lightbox template -->
<div id="blueimp-gallery-example-container" class="blueimp-gallery blueimp-gallery-controls">
    <div class="slides"></div>
    <h3 class="title"></h3>
    <a class="prev">&lsaquo;</a>
    <a class="next">&rsaquo;</a>
    <a class="close">&times;</a>
    <a class="play-pause"></a>
    <ol class="indicator"></ol>
</div>

<!-- Gallery -->
<div class="row mb-5" id="blueimp-gallery-example">
    <div class="col-md-3">
        <a href="/Images/bg/5.jpg" class="img-thumbnail" title="Image 1">
            <img src="/Images/bg/5.jpg" class="img-fluid" alt="Image 1">
        </a>
    </div>
    <div class="col-md-3">
        <a href="/Images/bg/6.jpg" class="img-thumbnail" title="Image 2">
            <img src="/Images/bg/6.jpg" class="img-fluid" alt="Image 2">
        </a>
    </div>
    <div class="col-md-3">
        <a href="/Images/bg/7.jpg" class="img-thumbnail" title="Image 3">
            <img src="/Images/bg/7.jpg" class="img-fluid" alt="Image 3">
        </a>
    </div>
    <div class="col-md-3">
        <a href="/Images/bg/8.jpg" class="img-thumbnail" title="Image 4">
            <img src="/Images/bg/8.jpg" class="img-fluid" alt="Image 4">
        </a>
    </div>
</div>

<div id="blueimp-carousel-example" class="blueimp-gallery blueimp-gallery-carousel blueimp-gallery-controls">
    <div class="slides"></div>
    <h3 class="title"></h3>
    <a class="prev">&lsaquo;</a>
    <a class="next">&rsaquo;</a>
    <a class="play-pause"></a>
</div>